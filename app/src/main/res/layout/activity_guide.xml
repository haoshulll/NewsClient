<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myapp.newsclient.activity.GuideActivity">

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/guide_pager">
    </android.support.v4.view.ViewPager>

    <Button
        android:id="@+id/guide_btn_start"
        android:layout_width="135dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:background="@drawable/guide_btn_bg"
        android:text="@string/activity_guide_btn_text"
        android:textColor="@color/guide_btn_color"
        android:visibility="gone" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp" >

        <!-- 装静态点的容器 -->

        <LinearLayout
            android:id="@+id/guide_point_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>

        <View
            android:id="@+id/guide_point_selected"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/guide_point_selected" />
    </RelativeLayout>

</RelativeLayout>
